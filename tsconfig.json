{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": false,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@layouts": [
        "src/layouts/index"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*",
        "src/components/*/index"
      ],
      "@hooks": [
        "src/hooks/index"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@pages": [
        "src/pages/index"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@services": [
        "src/services/index"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@store": [
        "src/store/index"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@styles": [
        "src/styles/index"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils": [
        "src/utils/index"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "src"
, "public/locales/en/en.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
